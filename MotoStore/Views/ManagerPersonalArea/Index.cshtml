@model LayoutViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container my-5">
    <h2>Все пользователи</h2>
</div>
<div class="container">
    <table class="table table-striped table-light">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Город</th>
            <th scope="col">Адрес</th>
            <th scope="col">Email</th>
            <th scope="col">Телефон</th>
            <th scope="col">Дата регистрации</th>
            <th scope="col">количество заказов</th>
            
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < @Model.ManagerPersonalAreaUsers.Count; i++)
        {
            <tr>
                @{var j = i + 1;}
                <th scope="row">@j</th>
                <td>@Model.ManagerPersonalAreaUsers[i].Username</td>
                <td>@Model.ManagerPersonalAreaUsers[i].City</td>
                <td>@Model.ManagerPersonalAreaUsers[i].Address</td>
                <td>@Model.ManagerPersonalAreaUsers[i].Email</td>
                <td>@Model.ManagerPersonalAreaUsers[i].PhoneNumber</td>
                <td>@Model.ManagerPersonalAreaUsers[i].CreationDateTime</td>
                <td>
                    <a asp-action="UserOrders"
                       asp-controller="ManagerPersonalArea"
                       asp-route-userId="@Model.ManagerPersonalAreaUsers[i].Id">
                        @Model.ManagerPersonalAreaUsers[i].OrdersCount
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>