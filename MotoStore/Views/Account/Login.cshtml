@model MotoStore.ViewModels.Layout.LayoutViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="text-center my-5">
        <h2>Авторизация</h2>
    </div>
    <form asp-action="Login" asp-controller="Account" method="post" asp-antiforgery="true" class="row g-3 col-md-9 mx-auto">
        @await Html.PartialAsync("PartialViews/Account/LoginPartialView", Model)
        <button class="btn btn-warning w-25" type="submit">Отправить</button>
    </form>
</div>