@model LayoutViewModel

<div class="form-floating">
    <input type="email" asp-for="@Model.LoginViewModel.Email" class="form-control" id="inputEmail">
    <label for="inputEmail" class="form-label" asp-for="@Model.LoginViewModel.Email"></label>
    <span asp-validation-for="@Model.LoginViewModel.Email"></span>
</div>
<div class="form-floating">
    <input type="password" asp-for="@Model.LoginViewModel.Password" class="form-control" id="inputPassword">
    <label for="inputPassword" class="form-label" asp-for="@Model.LoginViewModel.Password"></label>
    <span asp-validation-for="@Model.LoginViewModel.Password"></span>
</div>
